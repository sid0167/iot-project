<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>BMI Calculator</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f5f7fa;
      padding: 2rem;
      max-width: 500px;
      margin: auto;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    .form-group {
      margin-bottom: 1rem;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }
    input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    button {
      width: 100%;
      padding: 0.75rem;
      background-color: #28a745;
      border: none;
      color: white;
      font-size: 1rem;
      border-radius: 5px;
      cursor: pointer;
    }
    button:hover {
      background-color: #218838;
    }
    #result {
      margin-top: 1rem;
      text-align: center;
      font-weight: bold;
      font-size: 1.1rem;
      color: #333;
    }
  </style>
</head>
<body>
  <h1>Enter Your Details</h1>
  <div class="form-group">
    <label for="height">Height (in cm)</label>
    <input type="number" id="height" placeholder="e.g. 170" required />
  </div>
  <div class="form-group">
    <label for="weight">Weight (in kg)</label>
    <input type="number" id="weight" placeholder="e.g. 65" required />
  </div>
  <button onclick="submitBMI()">Submit & Calculate BMI</button>
  <div id="result"></div>

  <script>
    // Dynamically inject the base API URL passed from the backend
    const BASE_URL = '<%= apiUrl %>';  // This will be replaced with your actual API URL in the EJS template
    const token = localStorage.getItem('token');  // Get token from local storage for authentication
  
    async function submitBMI() {
      // Get height and weight from the user input fields
      const height = parseFloat(document.getElementById('height').value);
      const weight = parseFloat(document.getElementById('weight').value);
      const resultDiv = document.getElementById('result');  // The div where the result will be shown
  
      // Check if height and weight are provided
      if (!height || !weight) {
        resultDiv.textContent = 'Please enter both height and weight.';
        return;
      }
  
      // Sending the data to the backend API
      try {
        // Make the POST request to the server with height, weight, and authorization header
        const res = await fetch(`${BASE_URL}/api/health/UserVitals`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`  // Include the JWT token for authentication
          },
          body: JSON.stringify({ height, weight })  // Send the height and weight in the body
        });
  
        // Parse the response from the server
        const data = await res.json();
  
        if (res.ok) {
          // If the request was successful, display the BMI and category
          resultDiv.textContent = `✅ BMI Recorded: ${data.bmi} (${data.category})`;
        } else {
          // If the request was not successful, display the error message
          resultDiv.textContent = `❌ ${data.message}`;
        }
      } catch (err) {
        // Handle any errors that occur during the fetch operation
        console.error('Error:', err);
        resultDiv.textContent = '❌ Something went wrong.';
      }
    }
  </script>
  
</body>
</html>
